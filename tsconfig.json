{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,                     
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@database/*": ["./database/*"],
      "@router/*": ["router/*"],
      "@types/*": ["types/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
